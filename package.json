{
  "name": "template-node-fastify-ts",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "git@github.com:themakunga/template-node-fastify-ts.git",
  "author": "Nicolas Martinez V. <nmartinezv@icloud.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "lint": "eslint ./src --ext .ts --ignore-path .gitignore",
    "lint:fix": "eslint ./src --ext .ts --ignore-path .gitignore --fix",
    "test": "NODE_ENV=testing jest",
    "changelog": "auto-changelog -p  && git add CHANGELOG.md",
    "prepare": "husky install",
    "dev": "nodemon | pino-pretty --colorize",
    "start": "node ./dist/server.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "auto-changelog": "^2.3.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-environment-node": "^27.3.1",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "env-schema": "^3.5.0",
    "fastify": "^3.24.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cli": "^2.13.0",
    "fastify-now": "^2.4.0",
    "fastify-plugin": "^3.0.0",
    "fastify-routes": "^3.1.0",
    "fastify-swagger": "^4.12.6",
    "fluent-json-schema": "^3.0.1",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "~": "./dist",
    "~controllers": "./dist/controllers",
    "~interfaces": "./dist/interfaces",
    "~repositories": "./dist/repositories",
    "~routes": "./dist/routes",
    "~schemas": "./dist/schemas",
    "~utils": "./dist/utils"
  }
}
